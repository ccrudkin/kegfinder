<% include header %>
    <a href='/'>Home</a>
    <a href='/newInventory'>Create new keg inventory</a>
    <a href='/viewInventory'>View inventory</a>
    <h2>Update keg inventory</h2>
    <div class='multiform'>
        <form id='updateInvForm'>
            <div class='multiforminputs'>
                <label for='updateKegs'>Keg IDs to update:</label>
                <br>
                <textarea id='updateKegs' placeholder='>>> Enter keg IDs separated by commas'></textarea>
            </div>
            <div class='multiforminputs'>
                <label for='condition'>New status: </label>
                <input id='condition' placeholder='Enter status'>
            </div>
            <div class='multiforminputs'>
                <label for='contents'>New contents: </label>
                <input id='contents' placeholder='Enter style'>
            </div>
            <div class='multiforminputs'>
                <label for='batchid'>New batch ID: </label>
                <input id='batchid' placeholder='Enter batch ID'>
            </div>
            <div class='multiforminputs'>
                <label for='location'>New location: </label>
                <input id='location' placeholder='Enter location'>
            </div>
            <div class='multiforminputs'>
                <label for='othernotes'>Notes: </label>
                <br>
                <textarea id='othernotes' placeholder='Enter notes'></textarea>
            </div>
            <div class='multiforminputs'>
                <label for='userID'>User ID: </label>
                <input id='userID' placeholder='User ID #'>
            </div>
            <div>
                <button type='button' class='formbutton' id='updateButton'>Update</button>
                <button type='button' class='formbutton' id='resetButton'>Reset</button>
            </div>
        </form>
        <p id='message' class='errorDialog'></p>
    </div>
    <div class='catalog' id='invSearchResults'>

    </div>
    <script src='javascripts/modInv.js'></script>
<% include footer %>